<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

     <!--Red Layout-->
    <LinearLayout
        android:background="#82ffffff"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--Blue Layout -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

           <!--Green Layout-->
            <RelativeLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <!--Station1 -->
                <ImageView
                    android:id="@+id/imageViewStation1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/station1" />

                <!--Title-->
                <TextView
                    android:clickable="true"
                    android:id="@+id/textViewStation1"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:background="#82000000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="@string/station1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <!--Green Layout-->
            <RelativeLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <!--station2-->
                <ImageView
                    android:id="@+id/imageViewStation2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/station2" />
                <!--Title-->
                <TextView
                    android:clickable="true"
                    android:id="@+id/textViewStation2"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:background="#82000000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="@string/station2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



        </LinearLayout>


        <!--Blue Layout -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Green Layout-->
            <RelativeLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <!--station3-->
                <ImageView
                    android:id="@+id/imageViewStation3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/station3" />
                <!--Title-->
                <TextView
                    android:id="@+id/textViewStation3"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:background="#82000000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="@string/station3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <!--Green Layout-->
            <RelativeLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <!--station4-->
                <ImageView
                    android:id="@+id/imageViewStation4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/station4" />
                <!--Title-->
                <TextView
                    android:id="@+id/textViewStation4"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:background="#82000000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="@string/station4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>






        </LinearLayout>


    </LinearLayout>





</RelativeLayout>